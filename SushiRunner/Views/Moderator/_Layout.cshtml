<body class="grey lighten-3">
<header id="menu">
        <div class="home-image-container">
            <img src="/img/logo.jpg" alt="Logo - SushiRunner">
        </div>
        <nav class="navbar_items">
            <div class="navbar_link">
                <a href="/">Головна</a>
            </div>
            <div class="navbar_link">
                <a href="#">Замовлення</a>
            </div>
            <div class="navbar_link">
                <a href="#">Категорії</a>
            </div>
            <div class="navbar_link">
                <a href="#">Продукти</a>
            </div>
        </nav>
        <div id="account">
            <div id="user">
                <div id="user">
                </div>
            </div>
            <div id="basket">
            </div>
            <div id="totalPrice">
            </div>
        </div>
    </header>
@RenderBody()
<script src="js/index.js"></script>
<script type="text/javascript" src="lib/materialize/dist/js/materialize.js"></script>
@RenderSection("Scripts", false)
</body>
</html>