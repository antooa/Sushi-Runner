@{
    ViewData["Title"] = "Sushi-Runner Moderator";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Sushi-Runner Moderator</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css">
    <script src="/lib/jquery/dist/jquery.js"></script>
    <script src="/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/moderator/index.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="lib/materialize/dist/css/materialize.css" media="screen,projection"/>
    <link rel="stylesheet" href="@Url.Content("/css/home/index.css")">
    @RenderSection("Styles", false)
