@model SushiRunner.ViewModels.HomeModel

@{
    ViewData["Title"] = "Sushi-Runner";
    Layout = "_HomeLayout";
}

<partial name="_Header" model="@Model.HeaderModel"/>

<div id="wrapper">
    <div id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">Sushi-Runner</a>
            </li>
            @foreach (var group in @Model.HeaderModel.AvailableGroups)
            {
                <li>
                    <a asp-controller="Home" asp-action="Index">@group.Name</a>
                </li>
            }
        </ul>
    </div>
    <div class="container-fluid">
        @foreach (var meal in Model.Meals)
        {
            <partial name="_Meal" model="@meal"/>
        }
    </div>
</div>
