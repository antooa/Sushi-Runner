@model PagedList.IPagedList<SushiRunner.ViewModels.MealModel>
@using PagedList.Mvc;
@{
    ViewData["Title"] = "Sushi-Runner";
    Layout = "_HomeLayout";
}

@section Styles
{
    <link rel="stylesheet" href="@Url.Content("/css/home/header-with-lines.css")">
}

<div id="wrapper">
    @if (Model == null)
    {
        <p id="hwl-edit" class="hwl">
            <span>Всі продукти</span>
        </p>
    }
    else
    {
        <p id="hwl-edit" class="hwl">
            
        </p>
    }
    <div class="container-fluid">
        @foreach (var meal in Model)
        {
            <partial name="_Meal" model="@meal"></partial>
        }
    </div>
    <br />
    Страница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
     
    
</div>
