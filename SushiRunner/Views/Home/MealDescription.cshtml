@model SushiRunner.ViewModels.MealModel

@{
    ViewData["Title"] = "Sushi Runner";
     Layout = "_HomeLayout";
}


<div class="item-img">
    <img src="@Model.ImagePath" alt="@Model.Name">
</div>
<div class="item-title">
    <h4>@Model.Name</h4>
</div>

<div class="item-description">
    <span>@Model.Description</span>
</div>
<div class="item-weight">
    <h5>
        <span>@Model.Weight грам</span>
    </h5>
</div>
<div class="item-price">
    <strong>@Model.Price грн.</strong>
</div>