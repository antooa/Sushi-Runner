@model MealModel

<div class="item-cart" data-meal-id="@Model.Id">
    <a asp-action="ViewMealDescription" asp-route-mealId="@Model.Id" >
        <div class="item-img">
            <img src="@Model.ImagePath" alt="@Model.Name">
        </div>
        <div class="item-title">
            <h4>@Model.Name</h4>
        </div>
    </a>
    
    <div class="item-description">
        <span>@Model.Description</span>
    </div>
    <div class="item-weight">
        <h5>
            <span>@Model.Weight грам</span>
        </h5>
    </div>
    <div class="item-footer">
        <div class="item-price">
            <strong>@Model.Price грн.</strong>
            <form id="@Model.Id" asp-action="Hide" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Id" name="mealId">
                <input type="hidden" name="redirectPath" value="@Context.Request.Path">
                <button style="width: 60px; height: 45px;" type="submit">
                    Hide
                </button>
            </form>
            
        </div>
        @if (!Model.IsInCart)
        {
            <form id="@Model.Id" asp-action="AddToCart" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" name="redirectPath" value="@Context.Request.Path"/>
                <span class="card-text p-1">
                    <button type="submit" class="add-to-cart-button">
                        <div class="add-to-cart-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                    </button>
                </span>
            </form>
        }
        else
        {
            <form id="@Model.Id" asp-action="RemoveFromCart" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" name="redirectPath" value="@Context.Request.Path"/>
                <span class="card-text p-1">
                    <button type="submit" class="add-to-cart-button">
                        <div class="add-to-cart-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </button>
                </span>
            </form>
        }
    </div>
</div>
