@model MealModel

<div class="item-cart" data-meal-id="@Model.Id">
    <div class="item-img">
        <img src="@Model.ImagePath" alt="@Model.Name">
    </div>
    <div class="item-title">
        <h4>@Model.Name</h4>
    </div>
    <div class="item-description">
        <span>@Model.Description</span>
    </div>
    <div class="item-weight">
        <h5>
            <span>@Model.Weight грам</span>
        </h5>
    </div>
    <div class="item-footer">
        <div class="item-price">
            <strong>@Model.Price грн.</strong>
        </div>
        <div>
            <form method="post" asp-controller="DisabledMeal" asp-action="Create">
                <input type="hidden" name="Name" value="@Model.Name"/>
                <input type="hidden" name="Description" value="@Model.Description"/>
                <input type="hidden" name="Weight" value="@Model.Weight"/>
                <input type="hidden" name="Price" value="@Model.Price"/>
                <input type="hidden" name="MealGroupId" value="@Model.MealGroupId"/>
                <input type="hidden" name="ImagePath" value="@Model.ImagePath"/>
                <button type="submit">Disable</button>
            </form>
        </div>
        @if (!Model.IsInCart)
        {
            <form id="@Model.Id" asp-action="AddToCart" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" name="redirectPath" value="@Context.Request.Path"/>
                <span class="card-text p-1">
                    <button type="submit" class="add-to-cart-button">
                        <div class="add-to-cart-icon">
                            <i class="fas fa-plus-circle"></i>
                        </div>
                    </button>
                </span>
            </form>
        }
        else
        {
            <form id="@Model.Id" asp-action="RemoveFromCart" asp-controller="Home" method="post">
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" name="redirectPath" value="@Context.Request.Path"/>
                <span class="card-text p-1">
                    <button type="submit" class="add-to-cart-button">
                        <div class="add-to-cart-icon">
                            <i class="fas fa-check-circle"></i>
                        </div>
                    </button>
                </span>
            </form>
        }
    </div>
</div>
