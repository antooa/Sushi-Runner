@model MealModel

<div class="item-card" data-meal-id="@Model.Id">
    <div class="item-img">
        <img src="@Model.ImagePath" alt="@Model.Name">
    </div>
    <div class="item-title">
        <h4>@Model.Name</h4>
    </div>
    <div class="item-description">
        <span>@Model.Description</span>
    </div>
    <div class="item-weight">
        <h5>
            <span>@Model.Weight гр.</span>
        </h5>
    </div>
    <div class="item-footer">
        <div class="item-price">
            <strong>@Model.Price грн.</strong>
        </div>
        <form id="@Model.Id" asp-action="AddToCart" asp-controller="Home" method="post">
            <input type="hidden" asp-for="Id"/>
            <span class="card-text p-1">
                <button type="submit" class="add-to-cart-button">
                    <div class="add-to-cart-icon">
                        <i class="fas fa-plus-circle"></i>
                        <i class="fas fa-checkbox-circle"></i>
                    </div>
                </button>
            </span>
        </form>
    </div>
</div>
