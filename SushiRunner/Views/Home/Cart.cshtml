@model SushiRunner.ViewModels.Home.CartModel

@section Scripts
{
    <script src="@Url.Content("/js/home/cart.js")"></script>
}

@section Styles
{
    <link rel="stylesheet" href="@Url.Content("/css/home/header-with-lines.css")">
}


<div class="cart-page-container">
    <p class="hwl">
        <span>Submit Order</span>
    </p>
    <div class="cart-container">
        <div class="cart-column-name-container">
            <div class="cart-table-head">
                <span class="description">Description</span>
                <span class="price">Price</span>
                <span class="quantity">Quantity</span>
                <span class="sum">Sum</span>
                <span class="cart-remove-button" style="display: none"></span>
            </div>
            <div class="table-rows">
                @foreach (var cartItem in Model.Items)
                {
                    <partial name="_CartTableRow" model="@cartItem"></partial>
                }
            </div>
            <div class="total-sum">
                <span id="total-sum"><strong>Total sum:</strong> 0 $</span>
            </div>
            <div class="pre-order">
                <button class="btn btn-outline-success">Pre order</button>
            </div>
        </div>
    </div>
</div>
